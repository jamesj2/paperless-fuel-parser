# Paperless-ngx Configuration
PAPERLESS_URL=http://localhost:8000
PAPERLESS_API_TOKEN=your-api-token-here

# Document Type name used to identify gas station receipts
PAPERLESS_DOCTYPE_NAME=Car: Fuel Receipt

# Custom field names in Paperless-ngx (must match exactly)
FIELD_GALLONS=Gallons
FIELD_TOTAL=Total
FIELD_ADDRESS=Address
FIELD_PPG="Price Per Gallon"

# LLM Provider: "gemini" or "claude"
LLM_PROVIDER=gemini

# Gemini API Key (if using Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3.0-flash

# Claude/Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-6-20250514

# Set to "true" to skip LLM and only use regex
REGEX_ONLY=false

# Retry settings for rate-limited LLM requests
LLM_MAX_RETRIES=3
LLM_RETRY_BASE_DELAY=10

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
